<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-4"><%= @collection.name %></h1>

      <ul class="list-group">
        <% @collection.flashcard_sets.each do |set| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><%= set.name %></span>
            <%= link_to 'Open Flashcard Set', flashcard_set_path(set), class: 'btn btn-primary btn-sm' %>
          </li>
        <% end %>
      </ul>

      <div class="text-center mt-4">
        <%= link_to 'Add Flashcard Set', new_collection_flashcard_set_path(@collection), class: 'btn btn-success' %>
        <%= link_to 'Edit', edit_collection_path(@collection), class: 'btn btn-warning' %>
        <%= button_to 'Delete Collection', collection_path(@collection), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>

      <div class="text-center mt-3">
        <%= link_to 'Back', collections_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
