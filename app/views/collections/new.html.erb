<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">New Collection</h1>
      
      <%= form_with(model: @collection, local: true, class: 'needs-validation') do |form| %>
        <div class="mb-3">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, value: @collection.name, class: 'form-control', placeholder: 'Enter collection name' %>
        </div>
        
        <div class="text-center">
          <%= form.submit "Create Collection", class: 'btn btn-primary' %>
          <%= link_to 'Cancel', collections_path, class: 'btn btn-secondary ms-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
