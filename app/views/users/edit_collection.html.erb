<h1>Edit Collection</h1>

<%= form_with model: @collection, url: user_collection_path(@user, @collection), method: :put do |form| %>
  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.submit 'Update Collection' %>
  </div>
<% end %>
<%= link_to 'Back', user_collection_path(@user, @collection) %>
