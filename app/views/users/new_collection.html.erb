<h1>New Collection</h1>

<%= form_with model: @collection, url: user_collections_path(@user), method: :post do |form| %>
  <div>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.submit 'Create Collection' %>
  </div>
<% end %>
<%= link_to 'Back', user_collections_path(@user) %>
