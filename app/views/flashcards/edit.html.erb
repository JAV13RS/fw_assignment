<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center mb-4">Edit Flashcard</h1>

      <% if @flashcard.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading">Errors</h4>
          <ul>
            <% @flashcard.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with(model: [@flashcard_set, @flashcard], local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :question, class: 'form-label' %>
          <%= form.text_area :question, rows: 3, class: 'form-control', placeholder: 'Edit the question here' %>
        </div>

        <div class="mb-3">
          <%= form.label :answer, class: 'form-label' %>
          <%= form.text_area :answer, rows: 3, class: 'form-control', placeholder: 'Edit the answer here' %>
        </div>

        <div class="text-center">
          <%= form.submit 'Update Flashcard', class: 'btn btn-primary' %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to 'Back to Flashcard Set', flashcard_set_path(@flashcard_set), class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
