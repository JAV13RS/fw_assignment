<h1>Edit Flashcard Set</h1>

<%= form_with(model: @flashcard_set, local: true) do |form| %>
  <% if @flashcard_set.errors.any? %>
    <div>
      <h2>Errors</h2>
      <ul>
        <% @flashcard_set.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit 'Update Flashcard Set' %>
  </div>
<% end %>

<%= link_to 'Back to sets', flashcard_sets_path %>
