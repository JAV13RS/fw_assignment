<h1><%= @flashcard_set.name %></h1>

<h2>Flashcards:</h2>
<% @flashcard_set.flashcards.each do |flashcard| %>
  <div class="flashcard">
    <p><strong>Question:</strong> <%= flashcard.question %></p>
    <%= link_to 'Open Flashcard', flashcard_set_flashcard_path(@flashcard_set, flashcard) %>

  </div> 
<% end %>

<h2>Comments:</h2>
<% @flashcard_set.comments.each do |comment| %>
  <p><%= comment.comment %> - <%= comment.user.email %></p>
<% end %>

<%= link_to 'Add Flashcard', new_flashcard_set_flashcard_path(@flashcard_set) %> |
<%= link_to 'Back to collections', collections_path %>
