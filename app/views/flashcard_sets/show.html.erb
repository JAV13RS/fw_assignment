<div class="container mt-5">
  <div class="row mb-5 pb-3">
    <div class="col-md-12">
      <h1 class="text-center mb-4"><%= @flashcard_set.name %></h1>

      <h2>Flashcards:</h2>
      <div class="row">
        <% @flashcard_set.flashcards.each do |flashcard| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <div class="card-body">
                <p class="question-answer">
                  <strong>Question:</strong> <%= flashcard.question %>
                </p>
                <p class="question-answer">
                  <strong>Answer:</strong> <%= flashcard.answer %>
                </p>

                <% if @flashcard_set.user == current_user %>
                  <div class="d-flex gap-2">
                    <%= link_to 'Edit', edit_flashcard_set_flashcard_path(@flashcard_set, flashcard), class: 'btn btn-warning btn-sm' %>
                    <%= button_to 'Delete', flashcard_set_flashcard_path(@flashcard_set, flashcard), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                  </div>
                <%end%>
                
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <h2>Comments:</h2>
      <% @flashcard_set.comments.each do |comment| %>
        <div class="card mb-2">
          <div class="card-body">
            <p><%= comment.comment %></p>
            <p><small><%= comment.user.email %></small></p>
          </div>
        </div>
      <% end %>

      <div class="fixed-buttons">
        <%= link_to 'Add Flashcard', new_flashcard_set_flashcard_path(@flashcard_set), class: 'btn btn-success' %>
        <%= link_to 'Test Yourself', cards_flashcard_set_path(@flashcard_set), class: 'btn btn-info btn-lg' %>
        <%= link_to 'Back to Collections', collections_path, class: 'btn btn-secondary' %>
        <%= button_to 'Delete Flashcard Set', flashcard_set_path(@flashcard_set), method: :delete, data: { confirm: 'Are you sure you want to delete this flashcard set?' }, class: 'btn btn-danger' %>
      </div>

    </div>
  </div>
</div>

<style>
  .fixed-buttons {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    gap: 10px;
    background-color: rgba(255, 255, 255, 0.8);
    padding: 10px;
    z-index: 1000; 
  }

  .fixed-buttons a, .fixed-buttons button {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    height: 50px;
    line-height: 30px; 
    text-align: center;
  }

  .question-answer {
    font-size: 1.25rem;
    margin-bottom: 10px;
  }
</style>
